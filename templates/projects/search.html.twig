{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('search') }}
{% endblock %}

{% block body_id 'projects_search' %}

{% block main %}
    <form action="{{ path('projects_search') }}" method="get">
        <div class="form-group">
            <input name="q"
                   class="form-control search-field"
                   placeholder="{{ 'project.search_for'|trans }}"
                   autocomplete="off"
                   autofocus
                   data-no-results-message="{{ 'project.search_no_results'|trans }}"
            >
        </div>
    </form>

{% endblock %}

{% block sidebar %}
    {{ parent() }}

{% endblock %}
